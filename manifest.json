{
    "name": "Blueprint Visualizer",
    "description": "Extension to view Blueprint components",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon128.png",
      "default_title": "Blueprint Visualizer - Highlight Blueprint components"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["constants.js", "content.js"],
        "run_at": "document_idle",
        "all_frames": true
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["styles.css", "popup.css"],
        "matches": ["http://*/*", "https://*/*"]
      }
    ]
  }